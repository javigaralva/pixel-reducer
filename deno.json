{
    "tasks": {
        "start": "deno run -A --watch=static/,routes/ dev.ts"
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "indentWidth": 4,
            "lineWidth": 120,
            "singleQuote": true,
            "proseWrap": "preserve",
            "semiColons": false
        }
    }
}
